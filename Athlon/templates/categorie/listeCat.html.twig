                                                  Modifier
                                                </th>
                                                <th>
                                                   supprimer
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody id="myTable">
                                        {% for i in Categorie  %}
                                            <tr class="odd gradeX">
                                            <td>{{i.id}} </td>
                                                  <td>{{i.nom}} </td>
                                               
                                                <td class="center">
                                                 <img src="{{ asset('/media/' ~ i.image) }}?t={{ date().getTimestamp() }}" alt="image"  width = "10%">
                                                </td>
                                                 <td>
                                                 <a class="btn btn-success" href="{{ path('updateCat', {id:i.ID}) }}">Update </a>
                                                </td>
												
												
												
                                                 <td>
                                                    <a class="btn btn-danger" href="{{ path('deleteCat', {id:i.ID}) }}">Delete </a>
                                                </td>
                                            </tr>
                                            
                                        </tfoot>
                                        
									 {% endfor %}
                                    </table>
