{% extends 'baseBack.html.twig' %}

{% block title %}CommandeItem index{% endblock %}



    {% block body %}
        <table class="table">
            <thead>
            <tr>
                <th>quantit√©</th>
                <th>produit band</th>
                <th>action</th>
            </tr>
            </thead>
            <tbody>
