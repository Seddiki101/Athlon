{% extends 'base4.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}






	<div class="wrapper">
		<div class="container">
			<div class="row">
				<div class="span9">
					<div class="content">	




    <h1>Article index</h1>
    <a href="{{ path('app_article_new') }}">Create new</a>






    <table cellpadding="0"  class="table table-responsive-xl"
                                        width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Descripton</th>
                <th>ImgArticle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.auteur }}</td>
                <td>{{ article.descripton }}</td>
                
                   <td><img src="{{ asset('B/media/' ~ article.imgArticle) }}?t={{ date().getTimestamp() }}" alt="Sujet image"  width = "30%">  </td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


	
	
	
	
	
	
	
	
	
						</div><!--/.content-->
				</div><!--/.span9-->
			</div>
		</div><!--/.container-->
	</div><!--/.wrapper-->
		
	
	
	
	
	
	
{% endblock %}
