{% extends 'base2.html.twig' %}

{% block title %}Sujet index{% endblock %}

{% block body %}



	<div class="wrapper">
		<div class="container">
			<div class="row">
				<div class="span9">
					<div class="content">	



    <h1>Sujet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Descr</th>
                <th>ImgSujet</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sujet in sujets %}
            <tr>
                <td>{{ sujet.id }}</td>
                <td>{{ sujet.nom }}</td>
                <td>{{ sujet.descr }}</td>
                <td>{{ sujet.imgSujet }}</td>
                <td>
                    <a href="{{ path('app_sujet_show', {'id': sujet.id}) }}">show</a>
                    <a href="{{ path('app_sujet_edit', {'id': sujet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sujet_new') }}">Create new</a>
	
	
	
	
	
							</div><!--/.content-->
				</div><!--/.span9-->
			</div>
		</div><!--/.container-->
	</div><!--/.wrapper-->
	
	
{% endblock %}
