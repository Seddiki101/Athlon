{% extends 'baseF.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <style>



        .btn-container {
            display: flex;
            flex-direction: column;
            align-items: center;

        }
        .btn2 {
            display: inline-block;
            padding: 9px 80px;
            font-size: 11px;
            font-weight: bold;
            text-align: center;
            text-transform: uppercase;
            color: #fff;
            background-color: #007bff;
            border: none;
            border-radius: 8px;
            margin: 4px 30px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
            cursor: pointer;
            transition: background-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }

        /* Button hover style */
        .btn2:hover {
            background-color: #0062cc;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

        /* Button active style */
        .btn2:active {
            background-color: #005cbf;
            box-shadow: none;
        }

        /* Button disabled style */
        .btn2:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
    </style>
    

 








    <section class="trainer-section spad">
    <div class="wrapper">
        <div class="container">

                <div class="span9">
                    <div class="content">
                        <h1 style="color: white">Article</h1>
                        <div class="centered-text">


                        <table class="table">
                            <tbody>

                            <tr>
                                <th style="color: white">Titre</th>
                                <td style="color: white">{{ article.titre }}</td>
                            </tr>
                             <tr>
                                <th style="color: white">Auteur</th>
                                <td style="color: white">{{ article.auteur }}</td>
                            </tr>
                            <tr>
                                <th style="color: white">Descripton</th>   
                                <td style="color: white">{{ article.descripton }}</td>
                            </tr>
                           
                            </tbody>
                            
                        </table>
                         <div class="btn-group">
  {% if is_granted('ROLE_USER') %}
  <div class="btn-group">
    <a href="{{ path('app_testfront_like', {'id': article.id, 'type': 'like'}) }}" class="btn btn-success"><i class="fa fa-thumbs-up"></i> Like</a>
    <a href="{{ path('app_testfront_like', {'id': article.id, 'type': 'dislike'}) }}" class="btn btn-danger"><i class="fa fa-thumbs-down"></i> Dislike</a>
    <div class="text-muted mb-2">{{ article.likes }} likes / {{ article.dislikes }} dislikes</div>

  </div>
{% endif %}
                       
                            </div>
 <a href="{{ path('app_testfront') }}"><button class="btn2">Back</button></a></a>

                    </div><!--/.content-->
                </div><!--/.span9-->
            </div>
        </div><!--/.container-->
    </div><!--/.wrapper-->

				
			</div>
		</div>
	</div>
                </div>
{% endblock %}