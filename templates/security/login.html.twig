{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}



    <section class="contact-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-1">
					 <div class="contact-form">





<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="single-price-plan">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}"   class="primary-btn price-btn" > Logout</a>
        </div>
    {% endif %}

 
	<h4>Please sign in</h4>
	

    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus  placeholder="Email">

    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required >

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="c-btn" type="submit">
        Sign in
    </button>
</form>


                         <br>
                         <br>
                         <a href="{{ path('app_register') }}"> Create account </a>
						 
						 <br>
						 <br>
						 <a href="{{ path('forgotten_password') }}"> Forgot password </a>
                         <br>


			</div>
          </div>
        </div>
		</div>
    </section>



{% endblock %}
