{% extends 'baseB.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}

<div class="wrapper">
    <div class="container">
        <div class="row">
            <div class="span9">
                <div class="content">
      <h4>Total des produits</h4>
      <p class="lead">{{ totalProduits }}</p>
   
  
      <h4>Produits par catégorie</h4>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Catégorie</th>
            <th>Nombre de produits</th>
          </tr>
        </thead>
        <tbody>
          {% for categorie in ProduitCategories %}
            <tr>
              <td>{{ categorie.nom }}</td>
              <td>  {{ categorie.ProduitCount }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>

 {% endblock %}

{% block footer %}

{% endblock %}

