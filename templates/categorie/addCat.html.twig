
{% extends 'baseB.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
<div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    
                    <p class="card-description">  Ajouter une categorie  </p>
                    {{ form_start(formCategorie , {'attr': {'novalidate':'novalidate'}} ) }}
                    <form class="forms-sample">
					<div class="form-group">
                        {{ form_row(formCategorie.nom, {'label':'Nom :' ,'attr':{'placeholder': 'Type something here…', 'class':'form-control'}}) }}</div>
                     
						<div class="form-group">
                        {{ form_row(formCategorie.image, {'label':'Image :' ,'attr':{'placeholder': 'Type something here…', 'class':'form-control'}}) }}</div>
					
						
                      
					 
                      <button type="submit" class="btn btn-primary mr-2" >Ajouter</button> <span><a href="{{ path('afficherCat') }}" class="btn btn-primary mr-2">Annuler</a>
                      
                    </form>
                    </br>
              
                    </div>
                </div>
            </div>
			  {%endblock%}