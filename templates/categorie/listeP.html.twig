{% extends 'baseF.html.twig' %}

{% block title %}Produit{% endblock %}


{% block body %}




 <section class="trainer-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>NOS PRODUITS |  <a href="{{ path('afficherFrontCat') }}">Catégorie</a> </h2>
                       
                      <h2>Produits de la catégorie {{ category.nom }}</h2>
                    </div>

                </div>
               
            </div>
             
            <div class="row">
           
            {% for article in articles %}
                <div class="col-lg-3 col-sm-6">
                
                    <div class="trainer-item">
                        <div class="ti-pic">
                            <img src="{{ asset('/uploads/produit/' ~ article.image) }}?t={{ date().getTimestamp() }}" alt="image"  width = "10%">
                           
                            <div class="trainer-text">
                                <h5>{{article.nom}}</h5>
                                <h6> <span>{{article.prix}} dt</span></h6>
                               <span> <i class="fa fa-star"></i>
													<i class="fa fa-star"></i>
													<i class="fa fa-star"></i>
													<i class="fa fa-star"></i>
													<i class="fa fa-star"></i></span>
                                                
                            </div>
                            
                         
                        </div>
                           <br/>   
                    </div>
                     <a href="{{ path('detaille' ,{id:article.id}) }}" class="primary-btn f-btn">Read More</a>
                </div>
            
                  {% endfor%}
                
                    </div>

                </div>
            
            </div>
        </div>
    </section>














         
    




  
		
{% endblock %}

{% block footer %}

