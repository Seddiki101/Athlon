{% extends 'baseF.html.twig' %}

{% block title %}Produit{% endblock %}


{% block body %}
 
 <section class="trainer-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>NOS PRODUITS |  <a href="{{ path('afficherFrontCat') }}">Cat√©gorie</a> </h2>
                      
                     
                    </div>
                </div>
            </div>
             
            <div class="row">
             {% for i in Produit %}
                <div class="col-lg-3 col-sm-6">
                
                    <div class="trainer-item">
                        <div class="ti-pic">
                            <img src="{{ asset('/uploads/produit/' ~ i.image) }}?t={{ date().getTimestamp() }}" alt="image"  width = "10%">
                           
                            <div class="trainer-text">
                                <h5>{{i.nom}}</h5>
                                <h6> <span>{{i.prix}} dt</span></h6>
                               <span> <i class="fa fa-star"></i>
													<i class="fa fa-star"></i>
													<i class="fa fa-star"></i>
													<i class="fa fa-star"></i>
													<i class="fa fa-star"></i></span>
                                                
                            </div>
                            
                         
                        </div>
                           <br/>   
                    </div>
                     <a href="{{ path('detaille' ,{id:i.id}) }}" class="primary-btn f-btn">Read More</a>
                </div>
              
                  {% endfor%}


                  <ul class="pagination">
                  <li class="{{(page == 1) ? 'disabled' : ''}}">
                  <a href="?page = 1">
                  <i class="fass fa-step-backward"></i>
                  </a>
                  </li>
                  <li class="{{(page == 1) ? 'disabled' : ''}}">
                  <a href="{{ (page > 1)  ? '?page=1' ~ (page - 1) : '' }} ">
                    <i class="fass fa-angle-left"></i>
                  </a>

                  </li>
                  {% set pages = (total / limit)| round(0, 'ceil')%}
                  {% for item in 1..pages%}

                  <li class="{{ (page == item) ? 'active' : '' }}">
                 <a href="?page={{item}}">{{item}}</a>
                 </li>
                  {% endfor%}
                  <li class="{{(page == pages) ? 'disabled' : ''}}">
                  <a href="{{ (page < pages)  ? '?page=' ~ (page + 1) : '' }} ">
                    <i class="fass fa-angle-right"></i>
                  </a>

                  </li>
                  </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>








         
    




  
		
{% endblock %}

{% block footer %}

{% endblock %}

